{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/api",
    "packages/app"
  ],
  "scripts": {
    "update-lang-id": "find packages -type f -exec sed -i '' 's/0002/0002/g' {} +",
    "build": "npm run -w packages/app build; npm run -w packages/api build",
    "dev": "npm run -w packages/api dev",
    "start": "npm run -w packages/api start",
    "lint": "eslint test/",
    "lint:fix": "eslint --fix test/",
    "pack": "rm *.tgz; npm -w packages/app pack",
    "publish": "npm -w packages/app publish"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/packages/",
      "<rootDir>/node_modules/"
    ]
  }
}
